<div class="container">
    <ol>
        {{#each article}}
        <div class="row newsLine mb-3 bg-info">
            <div class='col-9'>
                <li>
                    <p><span class="headlineField">{{headline}}</span></p>
                    <p><span class="">{{summary}}</span></p>
                    <p><span class="linkField">{{link url}}</span></p>
                </li>
            </div>
            <div class='col-3'>
                <form action="/save/{{this.id}}" method="POST">
                    <button class="btn btn-outline-dark save mt-3" data-id={{this.id}}>Save to favorites
                    </button>
                </form>
                <form action="/addcomment/{{this.id}}" method="POST">
                    <button class="btn btn-outline-dark save mt-3" data-id={{this.id}}>Add Comment
                    </button>
                </form>
            </div>
        </div>

        {{/each}}
    </ol>
</div>